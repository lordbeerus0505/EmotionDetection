<Screen3>:
    BoxLayout:
        id: screen3
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        Button:
            text: "Send Mail"
            font_size: 24
            on_press: root.send()
        Button:
            text: "Search Mail"
            font_size: 24
            on_press: root.search()
        Button:
            text: "Get Latest Mail"
            font_size: 24
            on_press: root.latest()
        Button:
            text: "Disconnect"
            font_size: 24
            on_press: root.disconnect()