<Screen3>:
    BoxLayout:
        id: screen3
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        Button:
            background_normal:''
            background_color: 0.2, 0.8, 0.8, .9
            text: "Send Mail"
            font_size: 24
            on_press: root.send()
        Button:
            background_normal:''
            background_color: 1, 0.6, 0.2, .9
            text: "Search Mail"
            font_size: 24
            on_press: root.search()
        Button:
            background_normal:''
            background_color: 0.8,0.8,0.8,0.9
            text: "Get Latest Mail"
            font_size: 24
            on_press: root.latest()
        Button:
            background_normal:''
            background_color: 1, .3, .4, .9
            
            text: "Disconnect"
            font_size: 24
            on_press: root.disconnect()