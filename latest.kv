
#:include connected.kv
#: include options.kv
#: include screen1.kv
#: include screen3.kv
#: include screen2.kv
<Latest>:
    output:output
    BoxLayout
        id: search
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30

        Label:
            text: 'Latest Mail'
            font_size: 32
        Button:
            background_normal:''
            background_color: 0, 1, 0.4, .8
            id:submit             
            text: 'Retrieve Latest Mail'
            font_size:24
            on_press: root.submit()	
        BoxLayout:
            orientation: 'vertical'
            id: output
            Label:
                text: 'Results'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20
        Button:
            background_normal:''
            background_color: 1, .3, .4, .9
            text: 'Return to Mail Options'
            font_size:24
            on_press: root.disconnect()	
            
        