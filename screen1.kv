
#:include connected.kv
#: include options.kv
#: include screen2.kv
#: include screen3.kv

<Screen1>:
    output:output
    BoxLayout
        id: screen1
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30

        Label:
            text: 'Emotion Detection'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Input String'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: input
                multiline:False
                font_size: 22
                height: 24
        
        Button:
            background_normal:''
            background_color: 0, 1, 0.4, .8
            text: 'Submit'
            font_size: 24

            on_press: root.submit(input.text)
        Button:
            background_normal:''
            background_color: 1, .3, .4, .9
            text: 'Disconnect'
            font_size:24
            on_press: root.disconnect()	
            
        BoxLayout:
            orientation: 'vertical'
            id: output

            Label:
                text: 'Results'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

        	
        