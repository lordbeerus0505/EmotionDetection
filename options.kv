<Options>:
    id: options
    orientation: 'vertical'
    padding: [10,50,10,50]
    spacing: 50
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: "Emotion Detection"
            font_size: 24
            on_press: root.detect()
        Button:
            text: "Product Review"
            font_size: 24
            on_press: root.scrape()
        Button:
            text: "Mail Assistant"
            font_size: 24
            on_press: root.mail()