<Connected>:
    BoxLayout
        id: submit
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Are you sure you want to exit?'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            
        Button:
            background_normal:''
            background_color: 0, 1, 0.4, .8
            text: 'Return to Options'
            font_size: 24

            on_press: root.disconnect()
        Button:
            background_normal:''
            background_color: 1, .3, .4, .9
            text: 'Disconnect'
            font_size:24
            on_press: root.stop()	